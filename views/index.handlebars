<div class="container">
    <h1>Burgers!!</h1>

    <h2>Burgers that are not eaten!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>Burgers that are eaten!</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers-block devoured=true}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>Lets Eat Some Burgers!</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burgerNameID">Burger Name:</label>
            <input type="text" id="burgerNameID" name="burgername">
        </div>

        <button type="submit">Add Burgers</button>

    </form>
</div>